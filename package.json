{
  "name": "clean_node_api",
  "version": "1.5.0",
  "description": "Desenvolvimento do projeto do curso \"NodeJs, Typescript, TDD, Clean Architecture e SOLID\" do Rodrigo Manguinho.",
  "main": "index.js",
  "scripts": {
    "start": "node dist/main/server.js",
    "build": "rimraf dist && ttsc -P ./tsconfig.tsc.json",
    "build:watch": "ttsc -P ./tsconfig.tsc.json -w",
    "debug": "nodemon -L --watch ./dist --inspect=0.0.0.0:9222 --nolazy ./dist/main/server.js",
    "dev": "ts-node-dev -r tsconfig-paths/register src/main/server.ts",
    "up": "npm run build && docker-compose up -d",
    "down": "docker-compose down",
    "test": "jest --passWithNoTests --no-cache --silent --runInBand",
    "test:watch": "npm test -- --watch -c jest-unit-config.js",
    "test:verbose": "jest --passWithNoTests --no-cache",
    "test:staged": "npm test -- --findRelatedTests",
    "test:ci": "npm test -- --coverage",
    "test:coveralls": "npm run test:ci && coveralls < coverage/lcov.info",
    "test:unit": "npm test -- --watch -c jest-unit-config.js",
    "test:integration": "npm test -- --watch -c jest-integration-config.js",
    "eslint": "eslint \"src/**\""
  },
  "author": "Felipe Borreli",
  "license": "ISC",
  "devDependencies": {
    "@shelf/jest-mongodb": "^1.1.3",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.2",
    "@types/jest": "^24.0.25",
    "@types/jsonwebtoken": "^8.3.7",
    "@types/mongodb": "^3.3.14",
    "@types/node": "^16.11.7",
    "@types/supertest": "^2.0.8",
    "@types/validator": "^12.0.1",
    "@typescript-eslint/eslint-plugin": "^2.34.0",
    "@zerollup/ts-transform-paths": "^1.7.18",
    "coveralls": "^3.0.11",
    "eslint": "^6.8.0",
    "eslint-config-standard-with-typescript": "^11.0.1",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^9.2.0",
    "eslint-plugin-promise": "^4.3.1",
    "eslint-plugin-standard": "^4.1.0",
    "git-commit-msg-linter": "^2.3.11",
    "husky": "^4.0.6",
    "jest": "^24.9.0",
    "lint-staged": "^10.5.4",
    "mockdate": "^2.0.5",
    "rimraf": "^3.0.2",
    "supertest": "^4.0.2",
    "ts-jest": "^24.3.0",
    "ts-node-dev": "^1.1.8",
    "tsconfig-paths": "^3.9.0",
    "ttypescript": "^1.5.13",
    "typescript": "^3.7.4"
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "^3.5.1",
    "nodemon": "^2.0.15",
    "validator": "^13.7.0"
  },
  "engines": {
    "node": "14.x"
  }
}
